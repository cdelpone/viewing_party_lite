<%= form_with url: '/register', local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %><br>
  <%= form.label :email %>
  <%= form.text_field :email, required: true %><br>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password %><br>
  <%= form.label :password_confirmation, "Password Confirmation:" %>
  <%= form.password_field :password_confirmation %><br>
  <%= form.submit %>
<% end %>
